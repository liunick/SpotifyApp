<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.nl.spotify.AddSong"
    tools:showIn="@layout/activity_add_song">

<TextView
    android:text="Search a song:"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etAddSongSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bAddSongSearch"
        android:text="Search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/etAddSongResult1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:textIsSelectable="true"/>
    <EditText
        android:id="@+id/etAddSongResult2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:textIsSelectable="true"/>
    <EditText
        android:id="@+id/etAddSongResult3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:textIsSelectable="true"/>
    <EditText
        android:id="@+id/etAddSongResult4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:textIsSelectable="true"/>
    <EditText
        android:id="@+id/etAddSongResult5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:textIsSelectable="true"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/bPrevSongs"
            android:text="Previous 5 Results"
            android:layout_width="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/bNextSongs"
            android:text="Next 5 Results"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_marginLeft="60dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_height="wrap_content" /></LinearLayout>
    <Button
        android:id="@+id/bClearSearch"
        android:text="Clear Results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/bAddToPlaylist"
        android:text="Add to playlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
